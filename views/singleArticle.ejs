<!DOCTYPE html>
<html lang="en">
<head>
  <%- include head.ejs %>
  <link rel="canonical" href="<%=uri%>" />
</head>
<body>
  <div class="container">
    <%- include navbar.ejs %>
    <div class="row">
      <div class="column col-sm-2"></div>
      <div id="articles" class="column col-sm-8 col-md-8 col-lg-8">

        <div class="classic-blog">
            <div class="post ">              
              <div class ="quick-look">
                <h2 class="post-title" href="?id=<%=data[0]._id%>"><%= data[0].title %></h2>
                <div class="meta">
                  <div class="post-id" style="display:none"><%=data[0]._id%></div>
                  <span class="date">Posted on <h5 class="displayDate"><%=data[0].displayDate%></h5></span>
                  <% if(data[0].author) { %>                   
                    <span class="author">| Author: <h5><%=data[0].author%></h5></span>
                  <% } %>                  
                  <span class="">| Source: <a href="<%= data[0].link %>">link</a></span>
                  
                  
                </div>
              </div>

              <div class="in-depth">
                <div
                    class="addthis_toolbox addthis_default_style addthis_16x16_style"
                    addthis:url="<%=data[0].link%>"
                    addthis:title="<%=data[0].title%>"
                  >
                    <a class="addthis_button_facebook"></a>
                    <a class="addthis_button_twitter"></a>
                    <a class="addthis_button_google_plusone_share"></a>
                    <a class="addthis_button_compact"></a><a class="addthis_counter addthis_bubble_style"></a>
                </div>
                <br/>
                <div class="post-description"><%- data[0].content %></div>                    
              </div>              
            </div>
        </div>
        

      </div>
    </div>
  </div>

  <footer class="footer">
    <div class="sub-footer">
      <div class="footer-container">
        <p class="pull-left">Built for you by the Node.js Community.</p>
        <p class="pull-right">- Contribute on <a href="https://github.com/madgloryint/planet">Github</a> -</p>
      </div>
    </div>
  </footer>


  <script src="/js/jquery.min.js"></script>
  <!-- Latest compiled and minified JavaScript -->
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-33396402-5', 'planetnodejs.com');
    ga('send', 'pageview');
  </script>
  <script type="text/javascript">
    var addthis_config = {
      data_track_addressbar : true,
      data_ga_property      : 'UA-33396402-5',
      data_ga_social        : true
    };
  </script>
  <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-4fd7768413d24ce9"></script>
  <script type="text/javascript" src="/js/xdate.js"></script>
  <script type="text/javascript" src="/js/format-dates.js"></script>
</body>
</html>